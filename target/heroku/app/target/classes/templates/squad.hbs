{{#partial "content"}}
    {{#if squads}}
        <h3 class="text-center m-4">All the squads available</h3>
        {{#each squads}}
            <div id="squad-card" class="card p-4 mt-3">
                <h3 class="ml-4">Squad name: {{name}}</h3>
                <hr>
                <h5>Call for Defence: {{cause}}</h5>
                <p>Maximum size: {{maxSize}}</p>
                {{#each heroes}}
                    <p>Member name:{{name}}</p>
                {{/each}}
                <p>Total number of members: {{size}}</p>
            </div>
        {{/each}}
        {{else}}
        <h1>You have no squads at the moment.</h1>
    {{/if}}
{{/partial}}
{{> layout.hbs}}